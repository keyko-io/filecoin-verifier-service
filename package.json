{
  "name": "filecoin-verifier-service",
  "version": "0.1.0",
  "description": "Automated Verify Service for Apps",
  "author": "Keyko",
  "license": "Apache-2.0",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "DEBUG=faucet:*,express:* nodemon --exec babel-node ./src/server.js",
    "build": "rimraf ./dist && babel ./src --out-dir ./dist",
    "serve": "DEBUG=faucet:* node dist/server.js",
    "test": "npm run lint && mocha --require @babel/register --timeout 20000 tests/test*.js --exit",
    "coverage": "cross-env NODE_ENV=test nyc --reporter=lcov npm test && nyc report",
    "format": "prettier --write '**/*.{js,jsx}'",
    "lint": "eslint --ignore-path .gitignore --ignore-path .prettierignore --ext .js,.jsx .",
    "release": "release-it --non-interactive",
    "changelog": "auto-changelog -p"
  },
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "body-parser": "^1.19.0",
    "boxen": "^4.2.0",
    "compression": "^1.7.4",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.5.0",
    "moment": "^2.27.0",
    "@keyko-io/filecoin-verifier-tools": "/home/sami/filecoin-verifier-tools",
    "regenerator-runtime": "^0.13.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.11.1",
    "@babel/plugin-transform-runtime": "^7.11.1",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.3",
    "@babel/register": "^7.10.1",
    "auto-changelog": "^2.2.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.2",
    "decache": "^4.6.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.1.3",
    "mocked-env": "^1.3.2",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "release-it": "^13.6.7",
    "rimraf": "^3.0.2"
  },
  "nyc": {
    "_comment": "Purpose of this part: to do code coverage within Mocha/Chai using Istanbul",
    "require": "@babel/register",
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
